<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pro.dbro.airshare.sample" >

    <application
        android:name=".AirShareSampleApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        tools:replace="android:allowBackup">

        <service android:name="pro.dbro.airshare.app.AirShareService" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.AdvancedUseActivity"
            android:label="@string/title_activity_advanced_use" >
        </activity>
    </application>

</manifest>
